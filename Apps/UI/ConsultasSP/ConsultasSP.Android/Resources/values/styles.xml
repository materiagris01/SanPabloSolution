<resources>

    <!-- Base application theme. parent="Theme.AppCompat.Light.DarkActionBar"-->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
      <!-- Customize your theme here. -->
      <item name="windowNoTitle">true</item>
      <item name="windowActionBar">false</item>
      <!--<item name="android:windowFullscreen">true</item>-->
      <!--<item name="colorPrimary">@android:color/transparent</item>-->
      <!--<item name="colorPrimaryDark">@android:color/transparent</item>-->
      <!--<item name="colorAccent">@android:color/transparent</item>-->
      <item name="colorPrimary">@android:color/transparent</item>
      <item name="colorPrimaryDark">@color/status_bar</item>
      <item name="colorAccent">@color/blue_dark</item>
      <item name="buttonStyle">@style/SMButton</item>
      <item name="editTextStyle">@style/SMEditText</item>
      <item name="imageButtonStyle">@style/SMImageButton</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
      <!-- Customize your theme here. -->
      <item name="android:windowFullscreen">true</item>
      <item name="colorPrimary">@android:color/transparent</item>
      <item name="colorPrimaryDark">@android:color/transparent</item>
      <item name="colorAccent">@android:color/transparent</item>
      <item name="buttonStyle">@style/SMButton</item>
      <item name="editTextStyle">@style/SMEditText</item>
      <item name="imageButtonStyle">@style/SMImageButton</item>
    </style>

    <style name="SMMainTitle" parent="android:Widget.TextView">
      <item name="android:fontFamily"></item>
      <item name="android:color">@color/colorAccent</item>
      <item name="android:textSize">30sp</item>
      <item name="android:textAllCaps">true</item>
    </style>

    <style name="SMButton" parent="Widget.AppCompat.Button">
     <!-- <item name="android:background">@drawable/btn_green</item> -->
      <item name="android:textColor">@color/white</item>
      <item name="android:textAllCaps">true</item>
    </style>
    <style name="SMButtonSuccess" parent="Widget.AppCompat.Button">
      <!-- <item name="android:background">@drawable/btn_green</item> -->
      <item name="android:textColor">@color/white</item>
      <item name="android:textAllCaps">true</item>
    </style>

    <style name="SMButtonOrangeRounded" parent="@android:style/Widget.EditText">
      <!-- <item name="android:background">@drawable/btn_green</item> -->
    </style>

    <style name="SMImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SMEditText" parent="@android:style/Widget.EditText">
      <item name="android:background">@drawable/theme_editText</item>
      <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

  <style name="AppTheme.PopMe">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowCloseOnTouchOutside">false</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    <item name="android:colorPrimary">@color/gray</item>
    <item name="android:colorPrimaryDark">@android:color/transparent</item>
    <item name="colorAccent">@android:color/transparent</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowActionBarOverlay">false</item>
    <item name="android:windowBackground">@color/black_transparent</item>
    <item name="android:background">@color/black_transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
  </style>
</resources>
